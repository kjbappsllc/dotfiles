#!/usr/bin/env bash

# Colors for information
YELLOWB="\033[1;33m"
NONE="\033[0m"

# Variables
DOTFILES_DIR=$(cd $(dirname -- $(readlink ~/.bash_profile))/../; pwd -P)
CONFIG_DIR="${DOTFILES_DIR}/config"

###
# ALL GENERATION ALIASES START WITH GEN
###

# Generate template build.gradle
gen-bg () {
    cp ${CONFIG_DIR}/file-templates/build.gradle .
    if [[ $? == 0 ]]; then
        echo -e "\nbuild.gradle template is generated"
        echo -e "\n${YELLOWB}Please replace the following placeholders in the generated file:"
        echo -e "\n* Main-Class\n* Project Name\n${NONE}"
    else
        echo "\nError generating file"
    fi
}


